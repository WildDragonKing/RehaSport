{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "outDir": "./dist/node",
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["vite.config.ts", "scripts", "types.d.ts"],
  "exclude": ["src"]
}
