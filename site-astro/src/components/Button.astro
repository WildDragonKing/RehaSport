---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'accent' | 'ghost';
  size?: 'sm' | 'default' | 'lg';
  icon?: boolean;
  class?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
}

const {
  href,
  variant = 'primary',
  size = 'default',
  icon = false,
  class: className = '',
  type = 'button',
  disabled = false,
} = Astro.props;

const classes = [
  'btn',
  `btn-${variant}`,
  size !== 'default' && `btn-${size}`,
  icon && 'btn-icon',
  className,
].filter(Boolean).join(' ');
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes} disabled={disabled}>
    <slot />
  </button>
)}
